# =============================
# RAG System Environment Config
# =============================

# GROQ API Key (required)
GROQ_API_KEY=your_groq_api_key_here

# Optional OpenAI fallback key (if you want to switch to OpenAI LLM)
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB directory (where embeddings are stored)
CHROMA_PERSIST_DIR=./data/vectors

# Log settings
LOG_DIR=./logs
LOG_JSON=true

# Ingestion settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Streamlit UI
STREAMLIT_PORT=8501

# Misc
DEBUG=false
